<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://apiSettingListView.title"
      focusComponent="apiSettingsDataGrid">
    <data>
        <collection id="apiSettingsDc"
                    class="com.company.dynamicds.apisetting.entity.ApiSetting">
            <fetchPlan extends="_base"/>
            <loader id="apiSettingsDl" readOnly="true">
                <query>
                    <![CDATA[select e from dwh_ApiSetting e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="apiSettingsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="apiSettingsDataGrid.createAction"/>
            <button id="editButton" action="apiSettingsDataGrid.editAction"/>
            <button id="removeButton" action="apiSettingsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="apiSettingsDl"/>
        </hbox>
        <dataGrid id="apiSettingsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="apiSettingsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="createdDate"/>
                <column property="createdBy"/>
                <column key="actionColumn" header="msg://com.company.dynamicds.view.document/actionListHeader"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
