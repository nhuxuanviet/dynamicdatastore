<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="apiSettingDc"
                  class="com.company.dynamicds.entity.ApiSetting" provided="true">
            <fetchPlan extends="_base">
            </fetchPlan>
        </instance>
    </data>
    <content>
        <hbox id="root" spacing="true" padding="true">
            <listBox id="scriptListBox" width="15%"/>
            <codeEditor id="preRequestEditor"
                        width="100%"
                        height="100%"
                        visible="false"
                        showPrintMargin="false"
                        showLineNumbers="true"
                        textWrap="true"
            />
            <codeEditor id="postResponseEditor" height="100%" width="100%"
                        defaultSuggestionsEnabled="true"
                        liveSuggestionsEnabled="true" mode="JAVASCRIPT" property="postResponseScript"
                        dataContainer="apiSettingDc"
                        visible="false"
                        showPrintMargin="false"
                        showLineNumbers="true"
                        textWrap="true"/>
        </hbox>
    </content>
</fragment>